@model NetECommerce.Common.Cart
@{
    ViewData["Title"] = "MyCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal? toplamTutar = 0;
}

<div class="py-2">
    <div class="container px-4 mt-5">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Edit</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model._myCart.Values)
                            {
                                toplamTutar += item.SubTotal;
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice</td>
                                    <td>
                                        <div class="col-sm-3">
                                            <input type="number" name="quantity" id="@item.Id" class="form-control" value="@item.Quantity"/>
                                        </div>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger btn-sm">delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
</div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <label>Have Coupon?</label>
                        <div class="">
                            <input type="text" class="form-control" placeholder="Coupon code"/>
                            <button class="btn btn-primary">Apply</button>
                        </div>
                    </div>
                   
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5>Total Price: @toplamTutar ₺</h5>
                        <a asp-action="CompleteCart" asp-asp-controller="Home" class="btn btn-primary">Complete Cart</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/site.js" asp-append-version="true"></script>
}